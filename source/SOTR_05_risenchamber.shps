const string gMapId = "10";

void OnStart()
{
    FadeOut(0.0f);
    WakeUpDialog();
    SetPlayerMoveSpeedMul(0.0f);
    SetPlayerRunSpeedMul(0.0f);
    BlockAllVanillaHints();
    RegisterCallbacks();
}

void OnLeave()
{
}

void RegisterCallbacks()
{
    AddSinglePlayerCollideCallback("JohanLineArea", "QuestDialog");
}
// ----------------------------------------------------------------------------
// After-Cutscene Dialog
// ----------------------------------------------------------------------------

void WakeUpDialog(string t)
{
    int stage = GetLocalVarInt("WakeUpDialog");
    AddLocalVarInt("WakeUpDialog", 1);
    float delay = 0.0f;

    if(stage == 0)
    {
        FadeIn(8.0f);

        delay = 5.0f;
    }
    else if(stage == 1)
    {
        PlayVoiceOnPlayerAndSlowdown(
            "RC_Johan_4.ogg", 
            "JohanNarration", 
            "35"
        );
        SetEffectVoiceOverCallback("WakeUpDialog");
        return;
    }
    else if(stage == 2)
    {
        PlayVoiceOnPlayerAndSlowdown(
            "RC_Johan_5.ogg", 
            "JohanNarration", 
            "36"
        );
        SetEffectVoiceOverCallback("WakeUpDialog");
        return;
    }
    else if(stage == 3)
    {
        ResetPlayerSpeed();
    }
    else
    {
        return;
    }

    AddTimer("", delay, "WakeUpDialog");
}

void WakeUpDialog()
{
    WakeUpDialog("");
}

void QuestDialog(string a, string b, int state)
{
        PlayVoiceOnPlayerAndSlowdown(
            "RC_Johan_6.ogg", 
            "JohanNarration", 
            "37"
        );
}