#include "AmnesiaSignatures.cpp"
#include "AmnesiaExtensions.ihps"

void OnEnter()
{
    ResetPlayerState();    
}

void OnStart()
{
    // NOTE(Spelos): When changing a map through
    // the debug menu, OnEnter does not trigger
    // this is to make sure the reset happens
    // in debug mode.
    if(ScriptDebugOn())
    {
        ResetPlayerState();    
    }
}

void OnLeave()
{
    DestroyDataCache();
}
