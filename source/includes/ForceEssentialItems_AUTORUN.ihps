#include "AmnesiaSignatures.cpp"

void OnEnter()
{
    EnforceEssentailItems();
}

void EnforceEssentailItems()
{
    EnforceItem(GetGlobalVarString("LanternName"), "lantern.ent");
    EnforceItem("SOTR_Clearsight_1", "SOTR_Clearsight.ent");
}

void EnforceItem(string itemName, string itemFile)
{
    if(!HasItem(itemName))
    {
        GiveItemFromFile(itemName, itemFile);
    }
}
